---
import { Image } from "astro:assets";
import { GALLERY } from "../constants/gallery";
---

<section id="galeria" class="h-full flex flex-col items-center justify-center gap-10">
  <div class="flex flex-col items-center justify-center h-full">
    {GALLERY.sub13.map((item) => (
      <h2 class="text-4xl font-bold text-center mb-8">{item.title}</h2>
      <div class="flex flex-wrap justify-center gap-4">
        {item.images.map((image, i) => (
          <Image src={image} alt={`${item.title}-${i}`} class={`w-100 rounded-xl sub13-${i + 1}`} gallery-img-sub13/>
        ))}
      </div>
    ))}
  </div>
  <div class="flex flex-col items-center justify-center h-full">
    {GALLERY.sub15.map((item) => (
      <h2 class="text-4xl font-bold text-center mb-8">{item.title}</h2>
      <div class="flex flex-wrap justify-center gap-4">
        {item.images.map((image, i) => (
          <Image src={image} alt={`${item.title}-${i}`} class={`w-100 rounded-xl sub15-${i + 1}`} gallery-img-sub15/>
        ))}
      </div>
    ))}
  </div>
</section>

<style>
  .active {
    transform: scale(1.3);
    transition: transform 0.3s ease-in-out;
  }
</style>

<script>
  import gsap from "gsap";

  const imgZoom13 = document.querySelectorAll("[gallery-img-sub13]");
  const imgZoom15 = document.querySelectorAll("[gallery-img-sub15]");

  imgZoom13.forEach((image, i) => {
    const zoomItem13 = gsap.timeline({ paused: true });
    zoomItem13.to(`.sub13-${i + 1}`, {
      scale: 1.3,
      duration: 1,
    });

    image.addEventListener("mouseenter", () => {
      zoomItem13.play();
      (image as HTMLElement).style.zIndex = "1000";
    });
    image.addEventListener("mouseleave", () => {
      zoomItem13.reverse();
      (image as HTMLElement).style.zIndex = "0";
    });
  });

  imgZoom15.forEach((image, i) => {
    const zoomItem15 = gsap.timeline({ paused: true });
    zoomItem15.to(`.sub15-${i + 1}`, {
      scale: 1.3,
      duration: 1,
    });

    image.addEventListener("mouseenter", () => {
      zoomItem15.play();
      (image as HTMLElement).style.zIndex = "1000";
    });
    image.addEventListener("mouseleave", () => {
      zoomItem15.reverse();
      (image as HTMLElement).style.zIndex = "0";
    });
  });
</script>